from four_year_plan_v1.majors.models import Course, Student, StudentSemesterCourses, Semester, Professor, CreateYourOwnCourse

from django.db.models import Q

temp1=StudentSemesterCourses.objects.all()
temp2=Student.objects.all()
temp3=temp1.filter(student=temp2.filter(name='Joe Student2'))
studentnamelist=[]
actualyearlist=[]
semesterlist=[]
coursenamelist=[]
coursenumberlist=[]
for sem1 in temp3:
  studentnamelist.append(sem1.student.name)
  actualyearlist.append(sem1.actual_year)
  semesterlist.append(sem1.semester)
  tempcoursename=[]
  tempcoursenumber=[]
  for cc in sem1.courses.all():
    tempcoursename.append(cc.name)
    tempcoursenumber.append(cc.number)
  coursenamelist.append(tempcoursename)
  coursenumberlist.append(tempcoursenumber)

